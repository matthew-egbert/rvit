#:kivy 1.0
#:import VectorTracker rvit.core.vis.vector_tracker

FloatLayout: 
    VectorTracker:
        pos_hint: {'x':0.5, 'y':0.5}
        size_hint:  (0.5,0.5)
        y_vector: 'track_me' ## variable to track and plot
        gradient: 'plasma'
        vmin: -1.0
        vmax: 1.0
        fill: 'columns'
        column_gap: 0.5
        show_controls: True
        unique_name: 'scalar_tracker'

    